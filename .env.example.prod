# Production Environment Variables
# ⚠️ NEVER commit this file to version control
# Copy .env.example.prod to .env.prod and update with your values

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_SECRET_KEY=your-very-long-secret-key-min-50-chars-change-me
DJANGO_LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DB=SwinCMS
POSTGRES_USER=swin_cms
POSTGRES_PASSWORD=your-strong-database-password-min-32-chars
POSTGRES_HOST=your-production-db-host.com
POSTGRES_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Security
SECURE_SSL_REDIRECT=True

# Connection Pooling
USE_DB_POOL=True

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# AWS S3 for Static/Media Files (optional)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
